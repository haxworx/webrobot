{% extends 'base.html.twig' %}

{% block head %}
<script src="/js/robot_log.js"></script>
{% endblock %}
{% block title %}Web Robot Log{% endblock %}

{% block body %}
<h1>Logs</h1>
<hr>
<div>
    {{ form_start(form) }}
    {{ form_end(form) }}
</div>

{% if logs %}
<pre class="overflow-auto bg-light border p-3 rounded-3 text-secondary" style="height: 480px;" id="log-panel">
{% for log in logs %}
{{ log.scanTimeStamp|date('Y-m-d H:i:s') }}:{{ log.message }}
{% endfor %}
</pre>
{% endif %}

{% if last_id %}
<script>
logsUpdate({{ bot_id }}, {{ last_id }}, '{{ scan_date }}', '{{ csrf_token('update-log') }}');
</script>
{% endif %}

{% endblock %}
