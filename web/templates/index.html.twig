{% extends "base.html.twig" %}

{% block content %}

<table class="crawlers">
  <thead class="crawlers">
    <tr>
      <th class="crawlers">address</th>
      <th class="crawlers">user-agent</th>
      <th class="crawlers">launch</th>
      <th class="crawlers">frequency</th>
      <th class="crawlers_action">actions</th>
    </tr>
  </thead>
{% for robot in robots %}
  <tr>
    <td>{{robot.address}}</td>
    <td>{{robot.start_time}}</td>
{% if robot.weekday == null %}
    <td>daily</td>
{% else %}
    <td>{{ robot.weekday }}</td>
{% endif %}
    <td>{{ robot.agent }}</td>
    <td class="crawlers_action">
      <form action="/edit" method="get">
        <input type="hidden" name="botid" value="{{robot.botid}}">
        <input type="submit" class="table_submit" value="Edit">
      </form>
      <form action="/confirm" method="post">
        <input type="hidden" name="botid" value="{{robot.botid}}">
        <input type="hidden" name="domain" value="{{robot.domain}}">
        <input type="hidden" name="scheme" value="{{robot.scheme}}">
        <input type="hidden" name="action" value="delete">
        <input type="submit" class="table_submit" value="Delete">
      </form>
    </td>
  </tr>
{% endfor %}
</table>

{% endblock %}
