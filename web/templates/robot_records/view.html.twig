{% extends 'base.html.twig' %}

{% block title %}View Records - {{ address }}{% endblock %}

{% block body %}
<h1>{{ address }}</h1>

{% for record in records %}
<p>One</p>
{% endfor %}

{% if previous >= 0 %}
    <a href="{{ path('app_records_view', { botId: bot_id, scanDate: scan_date, offset: previous }) }}">Previous</a>
{% endif %}
{% if next < records|length %}
    <a href="{{ path('app_records_view', { botId: bot_id, scanDate: scan_date, offset: next }) }}">Next</a>
{% endif %}
{% endblock %}
