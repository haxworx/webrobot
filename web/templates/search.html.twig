{% extends "base.html.twig" %}

{% block content %}


<form name="search" id="search" action="/search/" method="get">
<select class="search_select" name="domain">
{% for domain in domains %}
   <option {% if wanted_domain == domain %} selected {% endif %} value="{{ domain }}">{{ domain }}</option>
{% endfor %}
</select>
<input class="search_input" type="text" name="search">
<input class="search_submit" type="submit" value="Search">
</form>

<p>Searching {{ search }} in {{ wanted_domain }} .</p>

<p>Found a total {{ results_count }} results.</p>

{% for result in results %}
<p>{{ result.id }} => {{ result.url }} </p>
{% endfor %}

{% endblock %}
