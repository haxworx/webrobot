{% extends 'base.html.twig' %}

{% block title %}Web Robot Home{% endblock %}

{% block body %}
<h1>Scheduled</h1>
<hr>
<div {{ stimulus_controller('robot-index') }}>
<table width="100%" class="table table-striped">
    <thead>
        <tr><th>address</th></th><th>agent</th><th>start</th><th>running</th><th>finished</th><th class="text-center">actions</th></tr>
    </thead>
    <tbody>
{% for crawler in crawlers %}
        <tr class="align-middle">
            <td id="bot{{ crawler.botId }}Address"></td>
            <td id="bot{{ crawler.botId }}Agent"></td>
            <td id="bot{{ crawler.botId }}Start"></td>
            <td id="bot{{ crawler.botId }}State"></td>
            <td id="bot{{ crawler.botId }}Finish"></td>
            <td class="text-center">
                <a data-toggle="tooltip" title="Edit" href="{{ path('app_robot_schedule_edit', { botId: crawler.botId }) }}" class="text-decoration-none">&#128221;</a>
                {{ include('modal/modal_delete.twig', { 'bot_id': crawler.botId } ) }}
            </td>
        </tr>
{% endfor %}
    </tbody>
</table>
</div> <!-- end of index-controller -->
{% endblock %}

